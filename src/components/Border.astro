---
interface Props {
  sectionName: string;
}

const { sectionName } = Astro.props;
---

<div class="relative py-6">
  <div class="absolute inset-0 flex items-center px-8" aria-hidden="true">
    <div class="w-full border-t border-gray-500"></div>
  </div>
  <div class="relative py-6 px-2 sm:py-8 sm:px-6 lg:px-8">
    <h2>
      <span
        id={sectionName.toLowerCase()}
        class="bg-slate-900 pr-3 pl-3 text-lg font-medium text-gray-500"
      >
        {sectionName}
      </span>
    </h2>
  </div>
</div>
