---
export interface Props {
  title: string;
}

const { title } = Astro.props;

const navigation = [
  { name: "About", href: "#about" },
  { name: "Projects", href: "#projects" },
  { name: "Experience", href: "#experience" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      defer
      data-domain="dylanullrich.com"
      data-api="/plausible/api/event"
      src="https://plausible.io/js/script.js"
    ></script>
  </head>

  <body class="bg-slate-900">
    <header class="bg-slate-800">
      <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
        <div
          class="flex w-full items-center justify-between border-b border-teal-500 py-6 lg:border-none"
        >
          <div class="flex items-center">
            <a href="/">
              <img
                src="/images/du-logo.svg"
                width="50"
                alt="Get (Dylan) Ullrich or Die Trying Logo"
              />
            </a>
          </div>
          <div class="ml-10 space-x-4">
            <div class="ml-10 hidden space-x-8 lg:block">
              {
                navigation.map((link) => (
                  <a
                    href={link.href}
                    class="text-base font-medium text-gray-400 hover:text-gray-100"
                  >
                    {link.name}
                  </a>
                ))
              }

              <a
                href="#contact"
                class="rounded-md border-2 border-teal-400 bg-slate-800 px-2 py-1 text-base font-medium text-teal-400 shadow-sm shadow-teal-400 transition ease-in-out hover:bg-teal-400 hover:text-slate-800 hover:shadow-slate-200"
              >
                Contact
              </a>
            </div>
          </div>
        </div>
        <div class="flex flex-wrap justify-center space-x-6 py-4 lg:hidden">
          {
            navigation.map((link) => (
              <a
                href={link.href}
                class="text-base font-medium text-gray-400 hover:text-gray-100"
              >
                {link.name}
              </a>
            ))
          }

          <a
            href="#contact"
            class="rounded-md border-2 border-teal-400 bg-slate-800 px-2 py-1 text-base font-medium text-teal-400 shadow-sm shadow-teal-400 transition ease-in-out hover:bg-teal-400 hover:text-slate-800 hover:shadow-slate-200"
          >
            Contact
          </a>
        </div>
      </nav>
    </header>
    <slot />
    <footer class="bg-slate-800">
      <div
        class="mx-auto flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
      >
        <div class="mt-8 md:order-1 md:mt-0">
          <p class="text-center text-base text-gray-400">
            &copy; 2022 Get Ullrich or Die Trying
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
