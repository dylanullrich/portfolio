---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

interface Project {
  title: string;
  tech: string[];
  description: string;
  url: string;
}

const projects: Project[] = [
  {
    title: 'Assignment Buster',
    tech: ['JavaScript', 'Node.js', 'Slack API', 'Canvas API'],
    description:
      'Assignment Buster is a Slack App that helps students stay up-to-date with their coursework. Students are able to quickly access their Canvas assignments utilzing slash commands in slack.',
    url: 'https://github.com/dylanullrich/assignment-buster',
  },
  {
    title: 'Captain Caption',
    tech: ['JavaScript', 'Node.js', 'Auth0', 'MongoDB'],
    description:
      'Allows users to transcribe and translate spoken language utilizing the speech to text API. Users can log in and save their transriptions to MongoDB, which is guarded with Auth0.',
    url: 'https://github.com/dylanullrich/captain-caption',
  },
  {
    title: 'Evilist of Ricks',
    tech: ['TypeScript', 'SQL', 'Next', 'Tailwind', 'Prisma', 'tRPC'],
    description: `Allows users to vote on who they think is the most evil Rick from the Rick and Morty show. The results are saved to a SQL database. This project was built with Next.js, Tailwind CSS, and Prisma.`,
    url: 'https://github.com/dylanullrich/evilist-of-ricks',
  },
  {
    title: 'Serverless API',
    tech: ['JavaScript', 'Node.js', 'AWS Lambda'],
    description:
      'AWS Lambda Serverless API. This example shows how I often use serverless functions rather than a more traditional server.',
    url: 'https://github.com/dylanullrich/serverless-api',
  },
];
---

<Layout title="Projects | Dylan Ullrich">
  <section class="mx-auto h-full pt-24 text-sky-100">
    <h1 class="text-3xl font-bold text-white shadow-teal-500 text-shadow-lg">Projects</h1>
    <div class="mt-8">
      {
        projects.map((project) => (
          <div class="mb-4 mr-4 flex flex-col rounded-lg bg-slate-600 p-6 shadow-lg shadow-black">
            <div class="flex justify-between">
              <h3 class="text-lg font-bold text-white">{project.title}</h3>
              <div class="hover:scale-110">
                <a
                  href={project.url}
                  class="max-w-fit hover:scale-110"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon name="line-md:github" size={32} />
                </a>
              </div>
            </div>
            <div class="flex flex-wrap gap-2 pt-2">
              {project.tech.map((tech) => (
                <>
                  <span class="inline-flex items-center rounded-full bg-teal-100 px-3 py-0.5 text-xs font-medium text-teal-900">
                    {tech}
                  </span>
                </>
              ))}
            </div>
            <p class="pt-2 text-base text-sky-100">{project.description}</p>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
