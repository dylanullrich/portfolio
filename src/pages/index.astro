---
import Layout from '../layouts/Layout.astro';
import Border from '../components/Border';
import Intro from '../components/Intro.astro';
import AboutMe from '../components/About/AboutMe.astro';
import FavoriteTech from '../components/About/FavoriteTech';
import Projects from '../components/Projects';
import Experience from '../components/Experience';
import Contact from '../components/Contact';
---

<Layout title='Welcome to Astro.'>
  <main class='bg-slate-900'>
    <div class='max-w-7xl mx-auto'>
      <Intro />
      <Border sectionName='About' />
      <div class='px-4 sm:flex sm:py-24 sm:px-6 lg:px-8'>
        <AboutMe />
        <FavoriteTech />
      </div>
      <Border sectionName='Projects' />
      <Projects />
      <Border sectionName='Experience' />
      <Experience />
      <Border sectionName='Contact' />
      <Contact />
    </div>
  </main>
</Layout>
