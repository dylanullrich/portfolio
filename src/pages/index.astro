---
import Layout from '../layouts/Layout.astro';
import Border from '../components/Border.astro';
import Intro from '../components/Intro.astro';
import About from '../components/About.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import Contact from '../components/Contact';
---

<Layout title='Dylan Ullrich | Full Stack Developer'>
  <main class='bg-slate-900'>
    <div class='mx-auto max-w-7xl'>
      <Intro />
      <Border sectionName='About' />
      <About />
      <Border sectionName='Projects' />
      <Projects />
      <Border sectionName='Experience' />
      <Experience />
      <Border sectionName='Contact' />
      <Contact client:only='react' />
    </div>
  </main>
</Layout>
